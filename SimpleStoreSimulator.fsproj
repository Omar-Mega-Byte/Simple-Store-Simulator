<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>SimpleStoreSimulator</RootNamespace>
    <AssemblyName>SimpleStoreSimulator</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Search Module Types must come first -->
    <Compile Include="src\Search\SearchTypes.fs" />
    
    <!-- Product Module -->
    <Compile Include="src\Product\Product.fs" />
    <Compile Include="src\Product\ProductDatabase.fs" />
    
    <!-- Search Module Operations (depends on Product) -->
    <Compile Include="src\Search\SearchOperations.fs" />
    
    <!-- Cart Module Types -->
    <Compile Include="src\Cart\CartTypes.fs" />
    <Compile Include="src\Cart\CartConfig.fs" />
    
    <!-- Calculator Module (depends on CartTypes) -->
    <Compile Include="src\Calculator\PriceCalculator.fs" />
    <Compile Include="src\Calculator\DiscountEngine.fs" />
    
    <!-- FileIO Module (depends on CartTypes) -->
    <Compile Include="src\FileIO\JsonSerializer.fs" />
    <Compile Include="src\FileIO\FileOperations.fs" />
    
    <!-- Cart Operations (depends on Calculator and FileIO) -->
    <Compile Include="src\Cart\CartOperations.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
    <PackageReference Include="FSharp.SystemTextJson" Version="1.3.13" />
  </ItemGroup>

</Project>
