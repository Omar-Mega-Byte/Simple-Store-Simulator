<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SimpleStoreSimulator.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="SimpleStoreSimulator.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ðŸ›’ Simple Store Simulator - Professional Edition"
        Width="1200" Height="700"
        MinWidth="1000" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="ðŸ›’ SIMPLE STORE SIMULATOR" FontSize="22" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Modern F# E-Commerce Platform" FontSize="11" 
                               Foreground="#3498DB" Margin="0,3,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="{Binding CartItemCountDisplay}" 
                        FontSize="15" FontWeight="Bold" Padding="18,8"
                        Background="#E74C3C" Foreground="White" CornerRadius="8"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="20,12" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <StackPanel>
                <!-- Row 1: Search and Main Filters -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search -->
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" Text="{Binding SearchText}" 
                                 Watermark="ðŸ” Search products..."
                                 FontSize="15" Padding="12,10" Margin="0,0,10,0"
                                 Background="White" BorderBrush="#95A5A6" BorderThickness="1"
                                 CornerRadius="8"/>
                        
                        <Button Grid.Column="1" Content="Search" Command="{Binding SearchCommand}"
                                Background="#3498DB" Foreground="White" Padding="20,10" 
                                CornerRadius="8" FontWeight="Bold" FontSize="14"
                                BorderThickness="0"/>
                    </Grid>
                    
                    <!-- Category Filter -->
                    <ComboBox Grid.Column="1" SelectedItem="{Binding SelectedCategory}" 
                              ItemsSource="{Binding Categories}"
                              Width="180" Margin="10,0" FontSize="14" Padding="10"
                              Background="White" BorderBrush="#95A5A6"/>
                    
                    <!-- Sort By -->
                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedSortBy}" 
                              ItemsSource="{Binding SortByOptions}"
                              Width="140" Margin="10,0" FontSize="14" Padding="10"
                              Background="White" BorderBrush="#95A5A6"/>
                    
                    <!-- Show All Button -->
                    <Button Grid.Column="3" Content="Show All" Command="{Binding ShowAllProductsCommand}"
                            Background="#27AE60" Foreground="White" Padding="20,10" 
                            CornerRadius="8" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"
                            BorderThickness="0"/>
                </Grid>
                
                <!-- Row 2: Advanced Filters -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- In Stock Only Checkbox -->
                    <CheckBox Grid.Column="0" IsChecked="{Binding InStockOnly}"
                              Content="ðŸ“¦ In Stock Only" FontSize="13" FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <!-- Sort Order Toggle -->
                    <Button Grid.Column="1" Content="{Binding SortOrderDisplay}" 
                            Command="{Binding ToggleSortOrderCommand}"
                            Background="#7F8C8D" Foreground="White" 
                            Padding="14,8" FontSize="13" FontWeight="SemiBold" CornerRadius="6"
                            BorderThickness="0" Margin="0,0,20,0"/>
                    
                    <!-- Price Range -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ’° Price:" FontSize="13" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#34495E"/>
                        <NumericUpDown Value="{Binding MinPrice}" Minimum="0" Maximum="1000" 
                                       Increment="10" Width="110" FontSize="13" Padding="8"
                                       FormatString="0" Margin="0,0,6,0"/>
                        <TextBlock Text="-" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <NumericUpDown Value="{Binding MaxPrice}" Minimum="0" Maximum="1000" 
                                       Increment="10" Width="110" FontSize="13" Padding="8"
                                       FormatString="0"/>
                    </StackPanel>
                    
                    <!-- Stock Range -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ“Š Stock:" FontSize="13" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#34495E"/>
                        <TextBox Text="{Binding MinStock}" 
                                 Width="110" FontSize="13" Padding="8"
                                 Watermark="Min" Margin="0,0,6,0"
                                 Background="White" BorderBrush="#95A5A6"/>
                        <TextBlock Text="-" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Text="{Binding MaxStock}" 
                                 Width="110" FontSize="13" Padding="8"
                                 Watermark="Max"
                                 Background="White" BorderBrush="#95A5A6"/>
                    </StackPanel>
                    
                    <!-- Apply Filters Button -->
                    <Button Grid.Column="5" Content="ðŸ” Apply Filters" 
                            Command="{Binding ApplyFiltersCommand}"
                            Background="#3498DB" Foreground="White" 
                            Padding="16,8" FontSize="13" FontWeight="Bold"
                            CornerRadius="6" BorderThickness="0" Margin="0,0,8,0"/>
                    
                    <!-- Reset Filters Button -->
                    <Button Grid.Column="6" Content="ðŸ”„ Reset" 
                            Command="{Binding ResetFiltersCommand}"
                            Background="#E74C3C" Foreground="White" 
                            Padding="16,8" FontSize="13" FontWeight="Bold"
                            CornerRadius="6" BorderThickness="0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" MinWidth="300"/>
                <!-- Products -->
                <ColumnDefinition Width="Auto"/>
                <!-- Splitter -->
                <ColumnDefinition Width="*" MinWidth="350"/>
                <!-- Cart -->
            </Grid.ColumnDefinitions>

            <!-- Products List -->
            <Border Grid.Column="0" Background="White" Padding="10" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#2C3E50" Padding="12,8" CornerRadius="6" Margin="0,0,0,10">
                        <TextBlock Text="ðŸ“¦ Available Products" FontSize="15" 
                                   FontWeight="Bold" Foreground="White"/>
                    </Border>
                    
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding Products}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#ECF0F1" BorderBrush="#95A5A6" BorderThickness="1" 
                                            CornerRadius="6" Padding="8" Margin="0,0,0,6"
                                            BoxShadow="0 1 3 0 #20000000">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Product Name & Price -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}" 
                                                       FontSize="12" FontWeight="Bold" Foreground="#2C3E50"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PriceDisplay}" 
                                                       FontSize="13" FontWeight="Bold" Foreground="#E74C3C" 
                                                       VerticalAlignment="Center" Margin="6,0,0,0"/>
                                            
                                            <!-- Description -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                       Text="{Binding Description}" FontSize="10" 
                                                       Foreground="#7F8C8D" Margin="0,2,0,2" 
                                                       TextWrapping="Wrap" MaxHeight="28"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- Category, Stock & Add Button -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,3,0,0">
                                                <Border Background="#3498DB" CornerRadius="3" Padding="5,2">
                                                    <TextBlock Text="{Binding Category}" FontSize="9" 
                                                               FontWeight="SemiBold" Foreground="White"/>
                                                </Border>
                                                
                                                <Border Background="#F39C12" 
                                                        CornerRadius="3" Padding="5,2" Margin="4,0,0,0">
                                                    <TextBlock Text="{Binding StockDisplay}" FontSize="9" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <Button Grid.Row="2" Grid.Column="1" 
                                                    Content="+ Add" 
                                                    Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).AddToCartCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="#27AE60" Foreground="White" 
                                                    Padding="10,3" FontWeight="SemiBold" FontSize="10"
                                                    CornerRadius="5" BorderThickness="0"
                                                    IsEnabled="{Binding IsInStock}"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Resizable Splitter -->
            <GridSplitter Grid.Column="1" Width="5" 
                          Background="#95A5A6" 
                          ResizeDirection="Columns"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>

            <!-- Shopping Cart -->
            <Border Grid.Column="2" Background="#ECF0F1" Padding="12">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#2C3E50" Padding="12,10" CornerRadius="6" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ›’ Shopping Cart" FontSize="16" 
                                   FontWeight="Bold" Foreground="White"/>
                    </Border>
                    
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                        <!-- Cart Summary -->
                        <Border Background="White" BorderBrush="#95A5A6" BorderThickness="2" 
                                CornerRadius="8" Padding="12" Margin="0,0,0,8"
                                BoxShadow="0 2 4 0 #20000000">
                            <StackPanel>
                                <!-- Subtotal -->
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="Subtotal:" FontSize="12" 
                                               VerticalAlignment="Center" Foreground="#34495E" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CartSubtotalDisplay}" FontSize="12" 
                                               FontWeight="Bold" Foreground="#2C3E50"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Discount Section -->
                                <StackPanel Margin="0,0,0,6">
                                    <!-- Discount Selection -->
                                    <Grid Margin="0,0,0,4">
                                        <TextBlock Text="Discount:" FontSize="12" 
                                                   VerticalAlignment="Center" Foreground="#34495E" FontWeight="SemiBold"/>
                                        <ComboBox ItemsSource="{Binding AvailableDiscounts}" 
                                                  SelectedItem="{Binding SelectedDiscountName}"
                                                  Width="180" FontSize="11" Padding="6,4"
                                                  HorizontalAlignment="Right"
                                                  Background="White" BorderBrush="#95A5A6">
                                            <ComboBox.Styles>
                                                <Style Selector="ComboBoxItem">
                                                    <Setter Property="FontSize" Value="11"/>
                                                    <Setter Property="Padding" Value="8,4"/>
                                                </Style>
                                            </ComboBox.Styles>
                                        </ComboBox>
                                    </Grid>
                                    
                                    <!-- Discount Buttons -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                                        <Button Content="Apply" 
                                                Command="{Binding ApplyDiscountCommand}"
                                                Background="#27AE60" Foreground="White" 
                                                Padding="10,4" FontSize="10" CornerRadius="4"
                                                BorderThickness="0"/>
                                        <Button Content="Remove" 
                                                Command="{Binding RemoveDiscountCommand}"
                                                Background="#E74C3C" Foreground="White" 
                                                Padding="10,4" FontSize="10" CornerRadius="4"
                                                BorderThickness="0"/>
                                    </StackPanel>
                                    
                                    <!-- Discount Amount Display -->
                                    <Grid Margin="0,4,0,0" IsVisible="{Binding HasDiscount}">
                                        <TextBlock Text="Savings:" FontSize="12" 
                                                   VerticalAlignment="Center" Foreground="#27AE60" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CartDiscountDisplay}" FontSize="12" 
                                                   FontWeight="Bold" Foreground="#27AE60"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                                <!-- Tax -->
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="Tax (14%):" FontSize="12" 
                                               VerticalAlignment="Center" Foreground="#34495E" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CartTaxDisplay}" FontSize="12" 
                                               FontWeight="Bold" Foreground="#2C3E50"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Shipping -->
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="Shipping:" FontSize="12" 
                                               VerticalAlignment="Center" Foreground="#34495E" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CartShippingDisplay}" FontSize="12" 
                                               FontWeight="Bold" Foreground="#2C3E50"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Separator -->
                                <Border Height="1" Background="#BDC3C7" Margin="0,4,0,8"/>
                                <!-- Total -->
                                <Grid>
                                    <Border Background="#2C3E50" CornerRadius="4" Padding="4,1" 
                                            HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <TextBlock Text="Total:" FontSize="13" FontWeight="Bold" 
                                                   Foreground="White"/>
                                    </Border>
                                    <Border Background="#E74C3C" CornerRadius="4" Padding="4,1"
                                            HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CartTotalDisplay}" FontSize="14" 
                                                   FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <Button Content="ðŸ’³ Checkout" Command="{Binding CheckoutCommand}"
                                Background="#3498DB" Foreground="White" Padding="0,12" 
                                FontSize="14" FontWeight="Bold" CornerRadius="8" 
                                BorderThickness="0"
                                Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        
                        <Button Content="ðŸ—‘ï¸ Clear Cart" Command="{Binding ClearCartCommand}"
                                Background="#E74C3C" Foreground="White" Padding="0,10" 
                                FontSize="13" FontWeight="SemiBold" CornerRadius="8" 
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- Cart Items -->
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding CartItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#95A5A6" BorderThickness="2" 
                                            CornerRadius="8" Padding="10" Margin="0,0,0,8"
                                            BoxShadow="0 1 3 0 #15000000">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Product Name -->
                                            <TextBlock Grid.Row="0" Text="{Binding Name}" 
                                                       FontSize="13" FontWeight="Bold" Foreground="#2C3E50"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- Price per unit -->
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <TextBlock FontSize="11" Foreground="#34495E" FontWeight="SemiBold">
                                                    <Run Text="Price: "/>
                                                    <Run Text="{Binding Product.Price, StringFormat='EGP {0:F2}'}" FontWeight="Bold" Foreground="#2C3E50"/>
                                                </TextBlock>
                                            </Grid>
                                            
                                            <!-- Quantity Controls -->
                                            <Grid Grid.Row="2" Margin="0,6,0,0">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Qty:" FontSize="11" Foreground="#34495E" FontWeight="SemiBold"
                                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    
                                                    <!-- Decrement Button -->
                                                    <Button Content="âˆ’" 
                                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).DecrementQuantityCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#E74C3C" Foreground="White" 
                                                            Width="26" Height="26" CornerRadius="4" 
                                                            FontWeight="Bold" FontSize="14" Padding="0"
                                                            BorderThickness="0"
                                                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                                    
                                                    <!-- Quantity Display -->
                                                    <Border Background="#2C3E50" CornerRadius="4" 
                                                            BorderBrush="#2C3E50" BorderThickness="1"
                                                            Padding="10,4" Margin="4,0">
                                                        <TextBlock Text="{Binding Quantity}" FontSize="12" 
                                                                   FontWeight="Bold" Foreground="White" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Increment Button -->
                                                    <Button Content="+" 
                                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).IncrementQuantityCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#27AE60" Foreground="White" 
                                                            Width="26" Height="26" CornerRadius="4" 
                                                            FontWeight="Bold" FontSize="14" Padding="0"
                                                            BorderThickness="0"
                                                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                                            Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Subtotal and Remove Button -->
                                            <Grid Grid.Row="3" Margin="0,6,0,0">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock FontSize="13" FontWeight="Bold" Foreground="#E74C3C">
                                                        <Run Text="Subtotal: "/>
                                                        <Run Text="{Binding SubtotalDisplay}"/>
                                                    </TextBlock>
                                                    
                                                    <Button Content="ðŸ—‘ï¸ Remove" 
                                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RemoveFromCartCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#E74C3C" Foreground="White" 
                                                            Padding="8,4" CornerRadius="5" 
                                                            FontWeight="SemiBold" FontSize="10"
                                                            BorderThickness="0"
                                                            HorizontalAlignment="Stretch"
                                                            Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="15,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                <TextBlock Text="Â© 2025 Simple Store Simulator | Team: Ø¹Ù…Ø±ØŒ Ø¹Ù„ÙŠØŒ Ø¨Ø§Ø³Ù„ØŒ Ù…Ø§ÙŠÙƒÙ„" 
                           Foreground="#3498DB" FontSize="10" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>

</Window>
