<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SimpleStoreSimulator.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="SimpleStoreSimulator.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ðŸ›’ Simple Store Simulator - Professional Edition"
        Width="1200" Height="700"
        MinWidth="1000" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A2E" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="ðŸ›’ SIMPLE STORE SIMULATOR" FontSize="22" FontWeight="Bold" 
                               Foreground="#EAEAEA"/>
                    <TextBlock Text="Modern F# E-Commerce Platform" FontSize="11" 
                               Foreground="#16C79A" Margin="0,3,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="{Binding CartItemCountDisplay}" 
                        FontSize="15" FontWeight="Bold" Padding="18,8"
                        Background="#FF6B6B" Foreground="White" CornerRadius="8"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="15,8" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" Text="{Binding SearchText}" 
                             Watermark="ðŸ” Search products..."
                             FontSize="13" Padding="10" Margin="0,0,8,0"
                             Background="White" BorderBrush="#CED4DA" BorderThickness="1"
                             CornerRadius="6"/>
                    
                    <Button Grid.Column="1" Content="Search" Command="{Binding SearchCommand}"
                            Background="#4ECDC4" Foreground="White" Padding="18,7" 
                            CornerRadius="6" FontWeight="SemiBold" FontSize="13"
                            BorderThickness="0"/>
                </Grid>
                
                <!-- Category Filter -->
                <ComboBox Grid.Column="1" SelectedItem="{Binding SelectedCategory}" 
                          ItemsSource="{Binding Categories}"
                          Width="180" Margin="8,0" FontSize="13" Padding="8"
                          Background="White" BorderBrush="#CED4DA"/>
                
                <!-- Show All Button -->
                <Button Grid.Column="2" Content="Show All" Command="{Binding ShowAllProductsCommand}"
                        Background="#16C79A" Foreground="White" Padding="15,7" 
                        CornerRadius="6" FontWeight="SemiBold" FontSize="13" Margin="8,0,0,0"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Products -->
                <ColumnDefinition Width="*"/>
                <!-- Cart -->
            </Grid.ColumnDefinitions>

            <!-- Products List -->
            <Border Grid.Column="0" Background="#F8F9FA" Padding="12" BorderBrush="#DEE2E6" BorderThickness="0,0,1,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="ðŸ“¦ Available Products" FontSize="16" 
                               FontWeight="Bold" Margin="0,0,0,12" Foreground="#1A1A2E"/>
                    
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding Products}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#DEE2E6" BorderThickness="1" 
                                            CornerRadius="8" Padding="12" Margin="0,0,0,8"
                                            BoxShadow="0 1 3 0 #10000000">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Product Name & Price -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="#1A1A2E"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PriceDisplay}" 
                                                       FontSize="16" FontWeight="Bold" Foreground="#FF6B6B" 
                                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                                            
                                            <!-- Description -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                       Text="{Binding Description}" FontSize="11" 
                                                       Foreground="#6C757D" Margin="0,4,0,4" 
                                                       TextWrapping="Wrap" MaxHeight="32"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- Category, Stock & Add Button -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="#E3F2FD" CornerRadius="4" Padding="6,2">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               FontWeight="SemiBold" Foreground="#1976D2"/>
                                                </Border>
                                                
                                                <Border Background="#FFF3CD" 
                                                        CornerRadius="4" Padding="6,2" Margin="6,0,0,0">
                                                    <TextBlock Text="{Binding StockDisplay}" FontSize="10" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="#856404"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <Button Grid.Row="2" Grid.Column="1" 
                                                    Content="+ Add" 
                                                    Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).AddToCartCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="#16C79A" Foreground="White" 
                                                    Padding="12,4" FontWeight="SemiBold" FontSize="11"
                                                    CornerRadius="6" BorderThickness="0"
                                                    IsEnabled="{Binding IsInStock}"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Shopping Cart -->
            <Border Grid.Column="1" Background="White" Padding="12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="ðŸ›’ Shopping Cart" FontSize="16" 
                               FontWeight="Bold" Margin="0,0,0,12" Foreground="#1A1A2E"/>
                    
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                        <!-- Cart Summary -->
                        <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                                CornerRadius="8" Padding="12" Margin="0,0,0,8">
                            <StackPanel>
                                <!-- Subtotal -->
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="Subtotal:" FontSize="12" 
                                               VerticalAlignment="Center" Foreground="#6C757D"/>
                                    <TextBlock Text="{Binding CartSubtotalDisplay}" FontSize="12" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Tax -->
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="Tax (14%):" FontSize="12" 
                                               VerticalAlignment="Center" Foreground="#6C757D"/>
                                    <TextBlock Text="{Binding CartTaxDisplay}" FontSize="12" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Shipping -->
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="Shipping:" FontSize="12" 
                                               VerticalAlignment="Center" Foreground="#6C757D"/>
                                    <TextBlock Text="{Binding CartShippingDisplay}" FontSize="12" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Separator -->
                                <Border Height="1" Background="#DEE2E6" Margin="0,4,0,8"/>
                                
                                <!-- Total -->
                                <Grid>
                                    <TextBlock Text="Total:" FontSize="15" FontWeight="Bold" 
                                               VerticalAlignment="Center" Foreground="#1A1A2E"/>
                                    <TextBlock Text="{Binding CartTotalDisplay}" FontSize="18" 
                                               FontWeight="Bold" Foreground="#FF6B6B" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <Button Content="ðŸ’³ Checkout" Command="{Binding CheckoutCommand}"
                                Background="#4ECDC4" Foreground="White" Padding="0,12" 
                                FontSize="14" FontWeight="Bold" CornerRadius="8" 
                                BorderThickness="0"
                                Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        
                        <Button Content="ðŸ—‘ï¸ Clear Cart" Command="{Binding ClearCartCommand}"
                                Background="#FF6B6B" Foreground="White" Padding="0,10" 
                                FontSize="13" FontWeight="SemiBold" CornerRadius="8" 
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- Cart Items -->
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding CartItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                                            CornerRadius="8" Padding="10" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Product Name -->
                                            <TextBlock Grid.Row="0" Text="{Binding Name}" 
                                                       FontSize="13" FontWeight="Bold" Foreground="#1A1A2E"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- Price per unit -->
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <TextBlock FontSize="11" Foreground="#6C757D">
                                                    <Run Text="Price: "/>
                                                    <Run Text="{Binding Product.Price, StringFormat='EGP {0:F2}'}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </Grid>
                                            
                                            <!-- Quantity Controls -->
                                            <Grid Grid.Row="2" Margin="0,6,0,0">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Qty:" FontSize="11" Foreground="#6C757D" 
                                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    
                                                    <!-- Decrement Button -->
                                                    <Button Content="âˆ’" 
                                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).DecrementQuantityCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#FF6B6B" Foreground="White" 
                                                            Width="26" Height="26" CornerRadius="4" 
                                                            FontWeight="Bold" FontSize="14" Padding="0"
                                                            BorderThickness="0"
                                                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                                    
                                                    <!-- Quantity Display -->
                                                    <Border Background="White" CornerRadius="4" 
                                                            BorderBrush="#DEE2E6" BorderThickness="1"
                                                            Padding="10,4" Margin="4,0">
                                                        <TextBlock Text="{Binding Quantity}" FontSize="12" 
                                                                   FontWeight="Bold" Foreground="#1A1A2E" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Increment Button -->
                                                    <Button Content="+" 
                                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).IncrementQuantityCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#16C79A" Foreground="White" 
                                                            Width="26" Height="26" CornerRadius="4" 
                                                            FontWeight="Bold" FontSize="14" Padding="0"
                                                            BorderThickness="0"
                                                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                                            Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Subtotal and Remove Button -->
                                            <Grid Grid.Row="3" Margin="0,6,0,0">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock FontSize="13" FontWeight="Bold" Foreground="#FF6B6B">
                                                        <Run Text="Subtotal: "/>
                                                        <Run Text="{Binding SubtotalDisplay}"/>
                                                    </TextBlock>
                                                    
                                                    <Button Content="ðŸ—‘ï¸ Remove" 
                                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RemoveFromCartCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#FF6B6B" Foreground="White" 
                                                            Padding="8,4" CornerRadius="5" 
                                                            FontWeight="SemiBold" FontSize="10"
                                                            BorderThickness="0"
                                                            HorizontalAlignment="Stretch"
                                                            Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#1A1A2E" Padding="15,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#EAEAEA" FontSize="11" VerticalAlignment="Center"/>
                <TextBlock Text="Â© 2025 Simple Store Simulator | Team: Ø¹Ù…Ø±ØŒ Ø¹Ù„ÙŠØŒ Ø¨Ø§Ø³Ù„ØŒ Ù…Ø§ÙŠÙƒÙ„" 
                           Foreground="#16C79A" FontSize="10" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>

</Window>
